<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/pageItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/myProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/image_default" />

        <TextView
            android:id="@+id/myWritingID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="9.8"
            android:text="My ID"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/myKeyword"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_btn"
            android:text="" />

    </LinearLayout>

    <ImageView
        android:id="@+id/myTopicImage"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#e6e6e6"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--<ToggleButton-->
            <!--android:id="@+id/like"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="18dp"-->
            <!--android:background="@drawable/selector_like"-->
            <!--android:textOn=""-->
            <!--android:textOff=""-->
            <!--android:text=""/>-->

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:layout_marginEnd="15dp"-->
            <!--android:text="Like it"-->
            <!--android:textColor="#a6a6a6"-->
            <!--android:textSize="12dp" />-->

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/answer" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Comments"
            android:textColor="#a6a6a6"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="9"
            android:background="@android:color/transparent"
            android:text="내용"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/myEditMenu"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/edit" />

    </LinearLayout>



</LinearLayout>